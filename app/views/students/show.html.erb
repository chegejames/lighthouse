<div class="row-fluid">
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @student.name %>
</p>

<p>
  <b>Mobile:</b>
  <%= @student.mobile %>
</p>

<p>
  <b>Email:</b>
  <%= @student.email %>
</p>

<h1>Listing student_cards</h1>

<table class="table table-stripped table-bordered table-condensed table-hover">
  <tr>
      <th>Attendance</th>
    <th>Days journaled</th>
      <th>Days prayed</th>
    <th>Attended cell</th>
      <th>Attended church</th>
    <th>Assignment one</th>
      <th>Assignment two</th>
    <th>Memory verse</th>
      <th>Test</th>
    <th>Bible reading</th>
      <th></th>
    <th></th>
</tr>

<% @student_cards.each do |student_card| %>
  <tr>
      <td><%= student_card.attendance %></td>
      <td><%= student_card.days_journaled %></td>
      <td><%= student_card.days_prayed %></td>
      <td><%= student_card.attended_cell %></td>
      <td><%= student_card.attended_church %></td>
      <td><%= student_card.assignment_one %></td>
      <td><%= student_card.assignment_two %></td>
      <td><%= student_card.memory_verse %></td>
      <td><%= student_card.test %></td>
      <td><%= student_card.bible_reading %></td>
      <td><%= link_to 'Show', [@student, student_card] %></td>
      <td><%= link_to 'Edit', edit_student_student_card_path(@student, student_card) %></td>
    <td><%= link_to 'Destroy', [@student, student_card], method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</table>

  <br />

<%= link_to 'Add an entry', new_student_student_card_path(@student) %> |
<%= link_to 'Edit', edit_student_path(@student) %> |
<%= link_to 'Back', students_path %>
</div>
